# Production Environment Variables for Karsaz App
# Copy this file to .env.production and update with your production values

# Database Configuration
POSTGRES_DB=karsaz
POSTGRES_USER=karsaz
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration (Generate strong secrets!)
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MinIO Configuration
MINIO_ROOT_USER=karsaz_minio
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_BUCKET_NAME=karsaz-uploads
MINIO_USE_SSL=false

# Application URLs
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com/api
NEXT_PUBLIC_SOCKET_URL=https://api.your-domain.com
NEXT_PUBLIC_MINIO_URL=https://files.your-domain.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your_email_password_or_app_password
SMTP_FROM=noreply@your-domain.com

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=3001
ADMIN_PORT=3002
HTTP_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3003

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Optional Services
SENTRY_DSN=your_sentry_dsn_here
SEED_DATABASE=false

# App Configuration
NEXT_PUBLIC_APP_NAME=کارساز
NEXT_PUBLIC_APP_VERSION=2.0.0