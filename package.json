{
  "name": "karsaz-app",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    ".",
    "backend",
    "admin-panel"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:admin\"",
    "dev:frontend": "next dev --port 12000 --hostname 0.0.0.0",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-panel && npm run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:admin",
    "build:frontend": "next build",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-panel && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run start:admin\"",
    "start:frontend": "next start --port 12000 --hostname 0.0.0.0",
    "start:backend": "cd backend && npm run start",
    "start:admin": "cd admin-panel && npm run start",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:admin",
    "lint:frontend": "next lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:admin": "cd admin-panel && npm run lint",
    "type-check": "npm run type-check:frontend && npm run type-check:backend && npm run type-check:admin",
    "type-check:frontend": "tsc --noEmit",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:admin": "cd admin-panel && npm run type-check",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "jest",
    "test:backend": "cd backend && npm run test",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:studio": "cd backend && npm run db:studio",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "setup": "./scripts/setup.sh",
    "clean": "rm -rf .next out dist node_modules/.cache && cd backend && rm -rf dist node_modules/.cache && cd ../admin-panel && rm -rf .next out dist node_modules/.cache",
    "install:all": "npm install && cd backend && npm install && cd ../admin-panel && npm install"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.1.8",
    "@radix-ui/react-collapsible": "^1.1.8",
    "@radix-ui/react-context-menu": "^2.2.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.8",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.8",
    "@radix-ui/react-popover": "^1.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.2.8",
    "@radix-ui/react-scroll-area": "^1.2.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.1.8",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.8",
    "@radix-ui/react-toggle-group": "^1.1.8",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-query": "^5.59.20",
    "@tanstack/react-query-devtools": "^5.59.20",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "date-fns-jalali": "^3.6.0-0",
    "embla-carousel-react": "^8.5.1",
    "framer-motion": "^12.23.24",
    "fuse.js": "^7.0.0",
    "geist": "^1.3.1",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.555.0",
    "next": "16.0.5",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.4",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.14.0",
    "react-use": "^17.5.1",
    "recharts": "^2.13.3",
    "sharp": "^0.33.5",
    "socket.io-client": "^4.8.1",
    "sonner": "^1.7.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.5",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-config-next": "16.0.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
